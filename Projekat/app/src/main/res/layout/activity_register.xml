<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="branislav.gamf.chatapplication.MainActivity"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <EditText
            android:id="@+id/regUsername"
            android:hint="Username"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            />

        <EditText
            android:id="@+id/regFirstName"
            android:hint="First Name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />

        <EditText
            android:id="@+id/regPassword"
            android:hint="Password"
            android:password="true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            />

        <EditText
            android:id="@+id/regLastName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/regFirstName"
            android:layout_alignTop="@+id/regPassword"
            android:hint="Last Name" />

        <EditText
            android:id="@+id/regEmail"
            android:hint="Email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            />

        <TextView
            android:id="@+id/gender"
            android:text="gender:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/regEmail"
            android:layout_alignStart="@+id/regFirstName"
            />

        <Spinner
            android:id="@+id/regGender"
            android:entries="@array/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gender"
            android:layout_toEndOf="@+id/gender" />

        <CheckBox
            android:id="@+id/regCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@+id/regNotifications"
            />

        <TextView
            android:id="@+id/regNotifications"
            android:text="Accept Notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/regCheckBox"
            android:layout_marginTop="150dp"
            />

        <DatePicker
            android:id="@+id/regCalendar"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="175dp"
            android:layout_height="wrap_content"></DatePicker>

        <Button
            android:id="@+id/regButton"
            android:text="@string/register"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regCalendar"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>
</ScrollView>